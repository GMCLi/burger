<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            {{!-- ADD IMAGE --}}
            <img>
            <h1>Devour the Burger!!!</h1>
        </div>
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center" style="font-family: 'Lucida Console', Times, serif">
                    <h4 class="input">{{this.id}}. {{this.burger_name}}</h4>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/index/update?_method=PUT" class="button-size">
                        <input input type="hidden" type="text" name="burger_id" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default" style="border-radius: 50%">Click to
                            Devour</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <br>
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center enter_section">
                    <form action="/index/create" method="POST">
                        <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                        <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
                    </form>
                    <p>Enter a burger to add to the menu!</p>
                </div>
            </div>
        </div>
        <div class="col-md-12 text-center">

            <h1>Burgers Devoured</h1>
        </div>
        <div class="col-xs-6 text-center" id="top-bar" style="font-family: 'Lucida Console', Times, serif">
            <div class="row">
                {{#each burger_data}}
                {{#if this.devoured}}
                <div class="col-xs-9 text-center">
                    <h4 class="input">{{this.id}}. {{this.burger_name}}</h4>
                </div>
                {{!-- <div class="col-xs-3 text-center"> --}}
                {{!-- <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly> --}}
                {{/if}}
                {{/each}}
                {{!-- </div> --}}
            </div>
            <img src="/assets/img/eaten.png" style="margin-right: 250px;">
        </div>
    </div>
</div>